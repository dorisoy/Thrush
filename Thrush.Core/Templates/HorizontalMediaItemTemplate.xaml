<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns:pan="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Class="Thrush.Core.Templates.HorizontalMediaItemTemplate">
    <Grid Padding="16,16,0,16" HorizontalOptions="Start" WidthRequest="164">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <pan:PancakeView
            CornerRadius="8"
            IsClippedToBounds="True"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <pan:PancakeView.Shadow>
                <pan:DropShadow Color="LightGray"
                                Opacity="0.6">
                </pan:DropShadow>
            </pan:PancakeView.Shadow>
            <Image
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Aspect="AspectFill"
                Source="cover_art_placeholder.png"/>
        </pan:PancakeView>
        <Label mvx:Bi.nd="Text DisplayTitle"
             Grid.Row="1"
             VerticalTextAlignment="End"
             LineBreakMode="TailTruncation"
             MaxLines="1"
             Style="{StaticResource TitleItem}" />
        <Label
            mvx:Bi.nd="Text DisplaySubtitle"
            Grid.Row="2"
            VerticalTextAlignment="Start"
            LineBreakMode="TailTruncation"
            MaxLines="1"
            Style="{StaticResource SubtitleItem}" />
    </Grid>
</DataTemplate>
